<div class="featureapage" id="fp-<?php echo $this->page->getId(); ?>">
	<?php if($this->useImage): ?>
        <?php
        $infoPreview = Tools_Page_Tools::getPreviewFilePath($this->page->getId(), (($this->useImage == 'img') ? false : true), $this->cropSizeSubfolder);
        // Image exists
        if ($infoPreview['fullPath'] != '' && $infoPreview['fileName'] != '') {
            $src = $this->websiteUrl.$infoPreview['previewPath'].$infoPreview['sizeSubfolder'].$infoPreview['fileName'];
        }
        // Cropped image
        elseif ($this->useImage == 'imgc' && $infoPreview['fullPath'] == '' && $infoPreview['fileName'] != '') {
            $src        = $this->websiteUrl.$infoPreview['previewPath'].$infoPreview['fileName'];
            $cropStatus = Tools_Image_Tools::resizeByParameters(
                $infoPreview['sitePath'].$infoPreview['previewPath'].$infoPreview['fileName'],
                $this->cropParams[1],
                $this->cropParams[2],
                true,
                $infoPreview['sitePath'].$infoPreview['previewPath'].$infoPreview['sizeSubfolder'],
                true
            );
            if ($cropStatus === true) {
                $src = $this->websiteUrl.$infoPreview['previewPath'].$infoPreview['sizeSubfolder'].$infoPreview['fileName'];
            }
        }
        // No image
        else {
            $src = $this->websiteUrl.'system/images/noimage.png';
        }
        ?>
		<a class="page-teaser-image" href="<?php echo $this->websiteUrl . $this->page->getUrl(); ?>">
			<img src="<?php echo $src; ?>" />
		</a>
	<?php endif; ?>
    <a title="<?php echo $this->page->getH1(); ?>" href="<?php echo $this->websiteUrl . $this->page->getUrl(); ?>" class="page-title"><?php echo $this->page->getNavName(); ?></a>
	<?php if ($this->descLength): ?>
	<p><?php echo Tools_Text_Tools::cutText($this->page->getTeaserText(), $this->descLength); ?></p>
	<?php endif; ?>
</div>

<!-- theme box template -->
<script id="theme-box" type="text/template">

    <!-- download link -->
    <a class="lnk-download btn link" href="javascript:;" data-name="<%= name %>"><span class="icon-box-add icon16"></span></a>
    <div class="download-options">
        <a href="<?php echo $this->websiteUrl;?>api/toaster/themes/name/<%= name %>" title="Download light version of the <%= name %> theme">Get theme</a>
        <?php if(Tools_Security_Acl::isAllowed(Tools_Security_Acl::RESOURCE_PLUGINS)): ?>
	    <% if(isCurrent) { %>
	    <a title="Download full version of the <%= name %> theme" href="<?php echo $this->websiteUrl;?>api/toaster/themes/name/<%= name %>/kind/<?php echo Api_Toaster_Themes::THEME_KIND_FULL; ?>">Get website</a>
	    <% } %>
	    <?php endif; ?>
    </div>

	<% if(isCurrent) { %>
		<span class="lnk-current btn link" title="<?php echo $this->translate('Current');?>"><span class="icon-ok icon18 success"></span></span>
	<% } else { %>
		<a class="lnk-delete btn link error" title="<?php echo $this->translate('Delete');?>" data-name="<%= name %>"><span class="icon-remove icon16"></span></a>
	<% } %>

    <div class="theme-preview-img">
        <img src="<%= preview %>" class="preview" alt="<?php echo $this->translate('Seotoaster theme');?>: <%= name %>" title="<?php echo $this->translate('Seotoaster theme');?>: <%= name %>" />
    </div>

	<% if(!isCurrent) { %>
		<button class="apply-button formsubmit small grid_8"><?php echo $this->translate('Apply');?></button>
	<% } %>

    <p class="theme-name text-center mb0px">
        <% if(isCurrent) { %>
		<span class="current-theme success"><%= name.substr(0, 18) %></span>
        <% } else { %>
            <span class="apply-theme" data-name="<%= name %>" title="<% if((isCurrent)) { %>Your current theme: <%= name %> <% } else { %>Click to apply <%= name %> theme <% } %>"><%= name.substr(0, 18) %></span>
		<% } %>
    </p>
</script>

<div class="seotoaster container refreshOnClose">
    <?php echo $this->partial('admin' . DIRECTORY_SEPARATOR . '_header.phtml', array('headerText' => 'Manage themes', 'helpSection' => $this->helpSection)); ?>
	<div class="content">
		<!-- uploader -->
		<div  class="grid_12">
			<div class="grid_5 alpha">
				<?php echo $this->toasterUploader(array(
						'id'      => 'themes-uploader',
						'filters' => array('zip'),
						'caption' => $this->translate('Upload a new theme'),
						'caller'  => 'themes'
					));
				?>
			</div>
			<div class="grid_7 omega">
				<div id="themes-uploader-filelist"></div>
			</div>
		</div>

		<!-- main part -->
		<div class="grid_12">
<!--			<h2>--><?php //echo $this->translate('Themes list'); ?><!--</h2>-->
			<div id="themes-list">
				<div class="text-center spinner"><?php echo $this->translate('Loading themes list...'); ?></div>
			</div>
		</div>
	</div>
</div>


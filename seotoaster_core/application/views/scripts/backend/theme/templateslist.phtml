<div class="header">
	<?php echo $this->translate('Select template'); ?>
	<div class="closebutton">
		<a class="hide icon-chevron-right btn-icon" href="javascript:;" title="<?php echo $this->translate('Close'); ?>"></a>
	</div>
</div>
<div class="content">
<?php foreach ($this->types as $type => $caption ) : ?>
<?php
	$templates = array_filter($this->templates, function($tmpl)use($type){ return $tmpl['type'] === $type; });
	if (empty($templates)) continue;
?>
	<div class="grid_12 template_header"><?php echo $caption; ?></div>
	<div class="template_group grid_12">
		<?php foreach ($templates as $template) : ?>
		<div class="template_item template_preview <?php echo ((isset($template['isCurrent']) && $template['isCurrent']) ? 'curr-template' : ''); ?>" title="<?php echo sprintf($this->translate('%s template'), $template['fullName']); ?>">
			<?php if (isset($template['isCurrent']) && $template['isCurrent']): ?>
				<span class="template_delete icon-remove-2" title="<?php echo $this->translate('Delete');?>" /></span><span class="template-check icon-check"/></span>
			<?php elseif (!in_array($template['name'], $this->protectedTemplates)): ?>
				<span class="template_delete icon-remove-2" title="<?php echo $this->translate('Delete');?>" /></span>
			<?php endif; ?>
			<div class="template_name">
				<?php echo ucfirst($template['name']); ?><br>
	            <span class="subheader">(<?php echo $this->translate('used %s times', $template['pagesCount']); ?>)</span>
			</div>
			<?php echo $this->formHidden('template-id', $template['name'], array('id' => 'template-id-'.$template['name'])); ?>
		</div>
		<?php endforeach; ?>
	</div>
<?php endforeach; ?>
</div>